{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/index.js",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "runtimeArgs": ["-r", "tsconfig-paths/register"],
      "preLaunchTask": "tsc: build",
      "console": "integratedTerminal"
    }
  ]
}
