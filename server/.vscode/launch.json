{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to session processor",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/index.js",
      "sourceMaps": true,
      "stopOnEntry": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register"
      ],
      "preLaunchTask": "build:app",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--config",
        "mocha.config.js",
        "--timeout",
        "0"
      ],
      "preLaunchTask": "build:spec",
      "runtimeArgs": [
        "--nolazy"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug session processor (ONLY)",
      "runtimeExecutable": "node",
      "args": [
        "--session-processor",
        "e4beb40b-7140-48d5-9d9b-5cfe0f861cad"
      ],
      "program": "${workspaceFolder}/index.js",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register"
      ],
      "preLaunchTask": "build:app",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test dispatcher and session processor (ONLY)",
      "runtimeExecutable": "node",
      "args": [
        "--test-dispatcher",
        "e4beb40b-7140-48d5-9d9b-5cfe0f861cad"
      ],
      "program": "${workspaceFolder}/index.js",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register"
      ],
      "preLaunchTask": "build:app",
      "console": "integratedTerminal"
    },
  ]
}

