{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:app",
      "type": "shell",
      "command": "yarn",
      "args": [
        "run",
        "build:app",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "build:spec",
      "type": "shell",
      "command": "./node_modules/.bin/tsc",
      "args": [
        "-p", "tsconfig.spec.json"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
