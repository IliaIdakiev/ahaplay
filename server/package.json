{
  "name": "ahaplay-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r tsconfig-paths/register index.js",
    "start:pm2": "pm2 start ./index.js --no-automation --no-daemon --name ahaplay-server -- -r tsconfig-paths/register",
    "start:pm2:test": "pm2 start ./index.js --no-automation --no-daemon --name ahaplay-server -- --env test -r tsconfig-paths/register &",
    "start:pm2:debug": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name ahaplay-server  --no-automation --no-daemon --node-args='--inspect=9230' -- -r tsconfig-paths/register &",
    "start:pm2:debug:test": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name ahaplay-server  --no-automation --no-daemon --node-args='--inspect=9230' -- --sp-inspect --env test -r tsconfig-paths/register &",
    "start:pm2:process-helper": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name ahaplay-server-process-helper --no-automation --no-daemon -- --process-helper --sp-inspect &",
    "start:pm2:workshop-distributor": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name workshop-distributor --no-automation --no-daemon -- --workshop-distributor &",
    "start:pm2:debug:workshop-distributor": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name workshop-distributor --no-automation --no-daemon --node-args='--inspect=9227' -- --workshop-distributor &",
    "start:pm2:test:workshop-distributor": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name workshop-distributor --no-automation --no-daemon -- --workshop-distributor --env test &",
    "start:pm2:debug:test:workshop-distributor": "pm2 start ./index.js --watch --ignore-watch \"dump.rdb\" --name workshop-distributor --no-automation --no-daemon --node-args='--inspect=9227' -- --workshop-distributor --env test &",
    "build:app": "yarn cdc && yarn clean && tsc -p tsconfig.app.json",
    "build:spec": "yarn clean && tsc -p tsconfig.spec.json",
    "build:tests": "yarn clean:test && tsc -p tsconfig.test.json",
    "build:watch": "tsc -p tsconfig.app.json --watch",
    "docker:build": "docker build -t ahaplay-server:$npm_package_version .",
    "docker:run": "docker run --privileged --rm --name ahaplay_container -it -p 80:80 -p 443:443 -p 9229:9231 -p 9230:9232 -e NODE_ENV=dev ahaplay-server:$npm_package_version",
    "docker:run:debug": "docker run -v ./dist:/usr/src/app/dist  --privileged --rm --name ahaplay_container -it -p 80:80 -p 443:443 -p 5431:9856 -p 9229:9231 -p 9230:9232 -e NODE_ENV=dev -e IS_DEBUG=true ahaplay-server:$npm_package_version",
    "docker:run:debug:test": "docker run -v ./dist:/usr/src/app/dist  --privileged --rm --name ahaplay_container -it -p 80:80 -p 443:443 -p 5431:9856 -p 9229:9231 -p 9230:9232 -p 9234:9234 -e NODE_ENV=test -e IS_DEBUG=true ahaplay-server:$npm_package_version",
    "docker:run:prod": "docker run --privileged --rm --name ahaplay_container -it -p 80:80 -p 443:443 -e NODE_ENV=prod ahaplay-server:$npm_package_version",
    "docker:ps": "docker ps",
    "seed:test": "sequelize db:seed:all --config ./config/db.config.test.json",
    "spec": "yarn build:app && yarn build:spec && mocha --config mocha.spec.config.js",
    "test": "yarn build:tests && mocha --config mocha.test.config.js --timeout 0",
    "cdc": "madge --circular ./src/**/*.ts",
    "clean": "rimraf dist",
    "clean:test": "rimraf dist_tests"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^4.9.4",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@types/deep-diff": "^1.0.5",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.30.0",
    "deep-diff": "^1.0.2",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.14.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "nodemailer": "^6.9.6",
    "object-path": "^0.11.8",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "redis": "^4.6.10",
    "redux": "^4.2.1",
    "sequelize": "^6.33.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "xstate": "^4.38.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.9",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.19",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.3",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.8.5",
    "@types/nodemailer": "^6.4.11",
    "@types/object-path": "^0.11.4",
    "@types/pg": "^8.10.5",
    "@types/redis": "^4.0.11",
    "@types/redux": "^3.6.0",
    "@types/sequelize": "^4.28.16",
    "@types/sinon": "^17.0.1",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "cross-fetch": "^4.0.0",
    "csv-parser": "^3.0.0",
    "madge": "^6.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.2",
    "sinon": "^17.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}